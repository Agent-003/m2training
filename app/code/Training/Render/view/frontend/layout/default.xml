<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block name="topinfo" template="Training_Render::topinfo.phtml" />
        </referenceContainer>
        <referenceContainer name="content">
            <block name="training.content.test.color" template="Training_Render::test-color.phtml">
                <arguments>
                    <argument name="backgroundColor" xsi:type="string">#f3793b</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block name="training.render.test.form" template="Training_Render::test-form.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Training\Render\ViewModel\Form</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>